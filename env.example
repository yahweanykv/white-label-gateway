# Environment
ENV=development
# Runtime context: local | staging | production
ENVIRONMENT=local
# Payment provider: mock_success | mock_failed | mock_3ds | mock_random | mock_slow
PAYMENT_PROVIDER=mock_success
LOG_LEVEL=INFO
# Enable structured JSON logging (true | false)
JSON_LOGS=false

# Gateway Service
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Service URLs (for local development)
MERCHANT_SERVICE_URL=http://localhost:8001
PAYMENT_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003
FRAUD_SERVICE_URL=http://localhost:8004

# Database URLs (asyncpg driver)
MERCHANT_DATABASE_URL=postgresql+asyncpg://merchant_user:merchant_pass@localhost:5432/merchant_db
PAYMENT_DATABASE_URL=postgresql+asyncpg://payment_user:payment_pass@localhost:5432/payment_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP Settings (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=noreply@example.com

# Payment Gateway Settings
PAYMENT_GATEWAY_API_KEY=your-api-key
PAYMENT_GATEWAY_SECRET=your-secret
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com

# Fraud Detection
FRAUD_THRESHOLD=0.7
FRAUD_CHECK_ENABLED=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

